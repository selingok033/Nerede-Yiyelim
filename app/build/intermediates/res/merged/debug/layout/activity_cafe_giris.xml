<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cafe_login"
    android:padding="50dp"
    tools:context="com.example.merve.neredeyiyelim.CafeGiris">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/profil" />

    <EditText
        android:id="@+id/editTextCafeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_user_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:hint="Username" />

    <EditText
        android:id="@+id/editTextCafePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_lock_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:hint="Password"
        />

    <Button
        android:id="@+id/buttonCafeGiris"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Giris" />

    <TextView
        android:id="@+id/textViewCafeYazi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Hesabınız yoksa üye olunuz!" />

</LinearLayout>
